<p id="notice"><%= notice %></p>

<h1>Produtos</h1>

<table>
  <thead>
    <tr>
      <th>Sku</th>
      <th>Nome</th>
      <th>Descricao</th>
      <th>Quantidade</th>
      <th>Preco</th>
      <th>Codigo Barra</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @produtos.each do |produto| %>
      <tr>
        <td><%= produto["sku"] %></td>
        <td><%= produto["nome"] %></td>
        <td><%= produto["descricao"] %></td>
        <td><%= produto["quantidade"] %></td>
        <td><%= produto["preco"] %></td>
        <td><%= produto["codigo_barra"] %></td>
        <td><%= link_to 'Detalhar', produto_path(produto["_id"]["$oid"]) %></td>
        <td><%= link_to 'Editar', edit_produto_path(produto["_id"]["$oid"]) %></td>
        <td><%= link_to 'Deletar', '/produtos/'+produto["_id"]["$oid"], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Produto', new_produto_path %>
